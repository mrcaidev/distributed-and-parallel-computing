{
    "version": "2.0.0",
    "type": "shell",
    "problemMatcher": [],
    "tasks": [
        {
            "label": "Build MPI",
            "command": "mpic++",
            "args": [
                "${file}",
                "-o",
                "bin/${fileBasenameNoExtension}"
            ],
        },
        {
            "label": "Run MPI",
            "command": "mpiexec",
            "args": [
                "-n",
                "4",
                "bin/${fileBasenameNoExtension}"
            ],
            "dependsOn": "Build"
        }
    ]
}
